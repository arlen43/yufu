/* pages/shop/detail/detail.wxss */

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.tab {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.tab-active {
  border-bottom: 4rpx solid #4db718;
  background: #f7f7f9;
}

.tab-main {
  background: #f7f7f9;
  display: flex;
  justify-content: space-between;
}

.menu-left {
  height: 200rpx;
  width: 150rpx;
  flex: 0 0 150rpx;
  display: flex;
  flex-direction: column;
}
.m-tab {
  flex: 1;
  background: #f0eff3;
  border-bottom: 1rpx solid #aaa;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.m-tab-active {
  border-left: 4rpx solid #e78e2e;
  background: #f7f7f9;
}

.item:first-child {
  border-top: none;
}
.item {
  height: inherit !important;
}
.item-order {
  flex: 0 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
