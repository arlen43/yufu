/* pages/shop/detail/detail.wxss */

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #f7f7f9;
}
.tab {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #aaa;
}
.tab-active {
  border-bottom: 4rpx solid #4db718;
  color: #4db718;
}

.tab-main {
  background: #f7f7f9;
  display: flex;
  justify-content: space-between;
}
#order {
  margin-bottom: 100rpx;
}

.menu-left {
  /*1334 - 128 - 84 - 100 = 1022*/
  height: 1022rpx;
  width: 150rpx;
  flex: 0 0 150rpx;
  display: flex;
  flex-direction: column;
}
.fence-main {
  flex: 1;
}

.m-tab {
  flex: 1;
  background: #EBF3EC;
  border-bottom: 1rpx solid #aaa;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.m-tab-active {
  border-left: 4rpx solid #e78e2e;
  background: #f7f7f9;
}

.item:first-child {
  border-top: none;
}
.item {
  height: inherit !important;
}

.item-price {
  flex: 1;
}
.item-order, .item-select {
  flex: 0 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item-order-num {
  margin: 0 10rpx;
}

.bottom-cook {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(0,0,0,.6);
  filter:alpha(opacity=50);
}
.bottom-tool {
  display: flex;
  align-items: center;
}

.cart-block {
  height: 100rpx;
  width: 100rpx;
  border-radius: 100rpx;
  margin-top: -20rpx;
  margin-left: 20rpx;
  background: #e78e2e;
  position: relative;
  flex: 0 0 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cart-num {
  position: absolute;
  top: -1rpx;
  right: -5rpx;
  padding: 1rpx 10rpx;
  border-radius: 10rpx;
  background: #e33835;
  align-self: flex-end;
}
.cart-cost {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;

}

.cart-done {
  height: 100%;
  width: 200rpx;
  flex: 0 0 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #4db718;
}
