/****** 菜谱中特性描述item，居中分散对齐，自适应高度 ****/
.cookbook-item {
  display: flex;
  justify-content: space-around;
}
.item-icon-tip {
  display: flex;
  align-items: center;
  border-right: 1rpx solid #aaa;
  padding: 0 20rpx;
  margin: 20rpx 0;
}
.item-icon-tip:last-child {
  border-right: none;
}
.item-icon-tip-name {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-icon-tip-desc {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
}

/********* 菜谱步骤描述item，两端对齐 *************/
.item-step {
  display: flex;
  justify-content: space-between;
}
.item-step-num {
  padding-right: 20rpx;
}
.item-step-detail {
  flex: 1;
}
.item-big-img {
  width: 660rpx;
  height: 450rpx;
}

/************ 菜单页菜单项item，没有左padding ****/
.menu-item {
  /*padding-left: 0 !important;*/
  background: #f7f7f9;
}

/************ 页面底部定位工具栏 ***************/
.bottom-toolbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #aaa;
  background: #f5f4f5;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.bottom-tool {
  display: flex;
  align-items: center;
}

/*********** 页面不可拖动提示 **************/
.bottom-tip {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

/*********** form相关 **********/
.cell {
  display: flex;
  align-items: center;
}
.cell-label {
  width: 150rpx;
  word-wrap: break-word;
  word-break: break-all;
}
.cell-body {
  flex: 1;
}
.cell-extra {
  width: 150rpx;
  height: 100%;
  text-align: center;
  border-left: 1rpx solid #aaa;
  word-wrap: break-word;
  word-break: break-all;
}
